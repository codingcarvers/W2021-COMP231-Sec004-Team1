<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>
  <!--Main Content-->
  <main class="container">
    <div class="jumbotron">
      <h1 class="display-4">Welcome! to the <%= title %></h1>
      <!--message area-->
      <% if(messages.lenght > 0) { %>
      <div class ="alert alert-danger"> 
          <%= messages  %> 
      </div>
      <% } %> 

      <div class="row">
          <div class="offset-md-4 col-md-4">
              <h1>Please Login</h1>
              <form action="" method="POST"></form>
              <fieldset class="form-group"><label for="name">Username</label>
                   <input type="text" class="form-control" 
                   name="name" placeholder="Enter Username" 
                   id="name" required autofocus> 
                </fieldset>

                <fieldset class="form-group"><label for="password">Password</label>
                    <input type="text" class="form-control" 
                    name="password" placeholder="Enter Password" 
                    id="password" required > 
                    or
                    <a href="/register">Register Here</a>
                 </fieldset>

                 <fieldset class="form-group text-right">
                     <input type="submit" class="btn btn-success" Value="Login">
                     <a href="/">
                        <input type="button" class="btn btn-warning" value="Cancel"></a>
                    </fieldset>
          </div>
      </div>


    </div>
  </main>

<%- include ../partials/bottom_nav.ejs %>
<%- include ../partials/footer.ejs %>  